{
  "variables": {
    "atlas_username": "russmckendrick",
    "atlas_name": "centos71",
    "mirror": "http://centos.mirroring.pulsant.co.uk"
  },
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos71.cfg<enter><wait>"
      ],
      "disk_size": "100000",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "c5e46533a6ff8df177ed5c9098624f6cec46ca392bab16de2017195580088670",
      "guest_os_type": "RedHat_64",
      "headless": "false",
      "http_directory": "http",
      "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos71.cfg<enter><wait>"
      ],
      "disk_size": "100000",
      "guest_os_type": "centos-64",
      "headless": "true",
      "http_directory": "http",
      "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "vhv.enable": "TRUE"
      }
    }
  ],
  "provisioners": [
    {
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "only": [
        "virtualbox-iso",
        "vmware-iso"
      ],
      "scripts": [
        "scripts/centos71/base.sh",
        "scripts/common/vagrant.sh",
        "scripts/centos71/vmtools.sh",
        "scripts/centos71/cleanup.sh",
        "scripts/common/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "post-processors": [
    {
    "type": "vagrant",
    "keep_input_artifact": false
    },  
    {
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "vmware_fusion",
        "version": "0.0.1"
      },
      "only": [
        "vmware-iso"
      ],
      "type": "atlas"
    },
    {
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "version": "0.0.1"
      },
      "only": [
        "virtualbox-iso"
      ],
      "type": "atlas"
    }
  ]
}