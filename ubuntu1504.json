      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/15.04/ubuntu-15.04-server-amd64.iso",
      "name": "vagrant-vmware",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1"
      }
    }
  ],
  "post-processors": [
    {
    "type": "vagrant",
    "keep_input_artifact": false
    },
    {
      "artifact": "{{user `artifact`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "vmware_fusion",
        "version": "user `artifact_version`"
      },
      "only": [
        "vagrant-vmware"
      ],
      "type": "atlas"
    },
    {
      "artifact": "{{user `artifact`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "version": "user `artifact_version`"
      },
      "only": [
        "vagrant-virtualbox"
      ],
      "type": "atlas"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "vagrant-virtualbox": {
          "scripts": [
            "scripts/ubuntu/base.sh",
            "scripts/common/vagrant.sh",
            "scripts/ubuntu/virtualbox.sh",
            "scripts/ubuntu/cleanup.sh",
            "scripts/common/zerodisk.sh"
          ]
        },
        "vagrant-vmware": {
          "scripts": [
            "scripts/ubuntu/base.sh",
            "scripts/common/vagrant.sh",
            "scripts/ubuntu/vmware.sh",
            "scripts/ubuntu/cleanup.sh",
            "scripts/common/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "push": {
    "name": "{{user `push_name`}}",
    "vcs": true
  },
  "variables": {
    "artifact": "russmckendrick/ubuntu1504",
    "artifact_version": "0.0.1",
    "mirror": "http://releases.ubuntu.com",
    "push_name": "russmckendrick/ubuntu1504"
  }
}